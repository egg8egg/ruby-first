<div class="container">
  <div class="row posts-search">
    <input type="text" id="posts-search-txt" autofocus>
    <div class="results" id="posts-search-results"></div>
  </div>
<div class="col-sm-10 col-sm-offset-1 col-xs-12">
    <% @posts.each do |post| %>
    <div class="col-xs-12 text-center">
      <div class="text-center">
        <h2><%= post.title %></h2>
        <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
      </div>
      <div>
        <%= post.body.truncate(500).html_safe %>
      </div>
      <div class="text-center">
        <%= link_to "READ MORE", post_path(post) %>
      </div>
      <% if admin_signed_in? %>
        <%= link_to "Show", post_path(post), class: "btn btn-primary btn-sm" %>
        <%= link_to "Edit", edit_post_path(post), class: "btn btn-default btn-sm" %>
        <%= link_to "Delete", post_path(post), class: "btn btn-danger btn-sm", data: {:confirm => "Are you sure?"}, method: :delete %>
      <% end %>
      <hr />
  </div>
    <% end %>
  </div>
 
 
</div>
<script>
  $(function() {
    new app.Posts;
  });
</script>